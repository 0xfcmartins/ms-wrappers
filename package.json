{
  "name": "teams-wrapper",
  "version": "1.0.0",
  "description": "Microsoft Teams Electron wrapper with notification badge",
  "main": "main.js",
  "homepage": "https://github.com/fcmartins/teams-wrapper",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --linux deb",
    "build:all": "electron-builder --linux"
  },
  "author": {
    "name": "Francisco Martins",
    "email": "fcmartins@portoeditora.pt"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "35.1.2",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-tray-window": "1.2.7"
  },
  "build": {
    "appId": "pt.fcmartins.teams-wrapper",
    "productName": "teams-wrapper",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Office",
      "icon": "build/icons",
      "maintainer": "Francisco Martins <fcmartins@portoeditora.pt>",
      "executableName": "teams-wrapper",
      "desktop": {
        "Name": "Microsoft Teams",
        "Comment": "Microsoft Teams for Linux",
        "Categories": "Office;Network;InstantMessaging",
        "StartupWMClass": "teams-wrapper"
      }
    }
  }
}